<% include partials/header %>

  <div class="row">
    <div class="col-10 col">
      <h1>
        <%= title %>
      </h1>
    </div>
    <div class="col-1 col">
      <p>
        <a href="/filldata" class="paper-btn">
          Fill Data
        </a>
      </p>
    </div>
    <div class="col-1 col">
      <p>
        <a href="/add" class="paper-btn">Add Movie</a>
      </p>
    </div>
  </div>

  <br>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>director</th>
        <th>Year</th>
        <th>ImageUrl</th>
        <th>Edit</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>

      <% for (let i = 0; i < movies.length; i++) { %>

        <tr>
          <td>
            <%= movies[i].title %>
          </td>
          <td>
            <%= movies[i].director %>
          </td>
          <td>
            <%= movies[i].year %>
          </td>
          <td>
            <%= movies[i].imageUrl %>
          </td>
          <td>
            <a href="/admin/edit/<%= movies[i]._id %>" class="paper-btn btn-small">Edit</a>
          </td>
          <td>
            <a href="/admin/delete/<%= movies[i]._id %>" class="paper-btn btn-small" onclick="return confirm('Are you sure you want to delete this?');">Delete</a>
          </td>
        </tr>

        <% } %>
    </tbody>
  </table>
  <% include partials/footer %>