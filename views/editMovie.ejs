<% include partials/header %>



    <div class="row flex-center">
        <div class="sm-4 col">

            <div class="card" style="width: 20rem;">
                <div class="card-body">
                    <form method="POST">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" id="title" name="title" class="input-block" value="<%= movie.title %>">
                        </div>

                        <div class="form-group">
                            <label for="director">Director</label>
                            <input type="text" id="director" name="director" class="input-block" value="<%= movie.director %>">
                        </div>
                        <div class="form-group">
                            <label for="year">Year</label>
                            <input type="text" id="year" name="year" class="input-block" value="<%= movie.year %>">
                        </div>
                        <div class="form-group">
                            <label for="imageUrl">ImageUrl</label>
                            <input type="text" id="imageUrl" name="imageUrl" class="input-block" value="<%= movie.imageUrl %>">
                        </div>

                        <button type="submit" class="btn-secondary btn-block">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <% include partials/footer %>